<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <TextView
            android:id="@+id/textViewNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxLines="4"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewLoader"
            android:layout_toEndOf="@+id/imageViewLoader"
            />

    <TextView
            android:id="@+id/textViewStatusItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAppearance="@android:style/TextAppearance.Small"

            android:layout_below="@+id/textViewNameItem"
            android:layout_toRightOf="@+id/imageViewLoader"
            android:layout_toEndOf="@+id/imageViewLoader"
            android:layout_marginTop="10dp"/>

    <view
            android:id="@+id/li_progress"
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            class="ru.yourok.m3u8loader.fragments.loaderList.ProgressView"
            android:layout_below="@+id/textViewStatusItem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:id="@+id/imageViewLoader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_pause_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />


</RelativeLayout>
